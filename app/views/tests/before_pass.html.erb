<h1>Passing a test</h1>

<%= error_messages_for :user %>
<% form_tag before_pass_user_subject_test_path(@teacher, @subject, @test) do -%>
<p><%= label_tag 'Your name' %><br/>
<%= text_field_tag 'test[student_name]', @student_name %></p>

<p><%= label_tag 'Your test access password' %><br/>
<%= password_field_tag 'test[test_password]' %></p>

<p><%= submit_tag 'Ok' %></p>
<% end -%>
