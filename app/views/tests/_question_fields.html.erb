<div class="fields">
  <p class="actions edit-question">  
    <%= f.label :question, "Question", :class => 'question-text' %> <%= link_to_remove_fields "delete question", f %> <br />
    <%= f.text_area :question, :rows => 3 %>
  </p>             
  <label style="margin-bottom:2px">Answers</label>
  <% f.fields_for :answers do |builder| %>
    <%= render 'answer_fields', :f => builder %>
  <% end %>
  <p class="actions"><%= link_to_add_fields "+", f, :answers %></p>
</div>